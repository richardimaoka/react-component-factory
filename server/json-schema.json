{
  "$id": "https://github.com/richardimaoka/react-component-factory/server/json-schema.json",
  "type": "object",
  "properties": {
    "field1": {
      "$ref": "#/$defs/TextChunk"
    }
  },
  "$defs": {
    "Author": {
      "type": "object",
      "properties": {
        "id": { "type": "string" }
      }
    },
    "VideoPlatform": {
      "type": "string",
      "enum": ["YOUTUBE", "VIMEO"]
    },
    "Video": {
      "properties": {
        "platform": { "$ref": "#/$defs/VideoPlatform" },
        "url": { "type": "string" },
        "caption": { "type": "string" }
      }
    },
    "Image": {
      "properties": {
        "url": { "type": "string" },
        "alt": { "type": "string" },
        "caption": { "type": "string" },
        "width": { "type": "integer" },
        "height": { "type": "integer" }
      }
    },
    "TextChunk": {
      "type": "object",
      "properties": {
        "text": { "type": "string" },
        "highlight": { "type": "boolean" },
        "bold": { "type": "boolean" },
        "hyperlinkUrl": { "type": "string" },
        "strikeout": { "type": "boolean" },
        "inlineCode": { "type": "boolean" }
      }
    }
  }
}
